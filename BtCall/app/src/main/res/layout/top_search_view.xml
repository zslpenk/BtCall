<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_left"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_circle_shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="@id/view_left"
        app:layout_constraintEnd_toEndOf="@id/view_left"
        app:layout_constraintStart_toStartOf="@id/view_left"
        app:layout_constraintTop_toTopOf="@id/view_left" />

    <View
        android:id="@+id/view_center"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bg_semicircle_shape"
        app:layout_constraintBottom_toBottomOf="@id/view_left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/view_left"
        app:layout_constraintTop_toTopOf="@id/view_left" />

    <ImageView
        android:id="@+id/iv_search_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_search"
        app:layout_constraintBottom_toBottomOf="@id/view_center"
        app:layout_constraintStart_toStartOf="@id/view_center"
        app:layout_constraintTop_toTopOf="@id/view_center" />

    <EditText
        android:id="@+id/edit_input"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@color/transparent"
        app:layout_constraintBottom_toBottomOf="@id/view_center"
        app:layout_constraintStart_toEndOf="@id/iv_search_icon"
        app:layout_constraintTop_toTopOf="@id/view_center" />

    <ImageView
        android:id="@+id/iv_input_clear"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/iv_input_clear"
        app:layout_constraintBottom_toBottomOf="@id/view_center"
        app:layout_constraintEnd_toEndOf="@id/view_center"
        app:layout_constraintTop_toTopOf="@id/view_center" />

    <TextView
        android:id="@+id/tv_not_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="未搜到联系人"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_center" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_contract_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_center" />

</androidx.constraintlayout.widget.ConstraintLayout>